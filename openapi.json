{
  "openapi": "3.0.3",
  "info": {
    "title": "Pennysense API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://project-a-qqry.onrender.com"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/register": {
      "post": {
        "summary": "Register",
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login",
        "responses": {
          "200": {
            "description": "JWT issued"
          }
        }
      }
    },
    "/request-password-reset": {
      "post": {
        "summary": "Request reset",
        "responses": {
          "200": {
            "description": "Email sent"
          }
        }
      }
    },
    "/reset-password/{token}": {
      "post": {
        "summary": "Reset password",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password reset"
          }
        }
      }
    },
    "/expense/add-expense": {
      "post": {
        "summary": "Create expense",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/expense/get-expenses": {
      "get": {
        "summary": "List expenses",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "month",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "year",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/expense/get-expense/{id}": {
      "get": {
        "summary": "Get expense by id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}