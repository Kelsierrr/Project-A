{
  "info": {
    "name": "Pennysense Backend",
    "_postman_id": "pennysense-20250812083920",
    "description": "Pennysense API collection (local + production).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"testuser\", \"email\": \"test@example.com\", \"password\": \"Passw0rd!\"}"
        },
        "url": "{{baseUrl}}/register"
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set('token', jsonData.token);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"testuser\", \"password\": \"Passw0rd!\"}"
        },
        "url": "{{baseUrl}}/login"
      }
    },
    {
      "name": "Request Password Reset",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"test@example.com\"}"
        },
        "url": "{{baseUrl}}/request-password-reset"
      }
    },
    {
      "name": "Reset Password (token in path)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"newPassword\": \"NewPassw0rd!\", \"confirmPassword\": \"NewPassw0rd!\"}"
        },
        "url": "{{baseUrl}}/reset-password/TOKEN_IN_LINK"
      }
    },
    {
      "name": "Add Expense",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"total\": 100, \"datespent\": \"2025-08-10\", \"items\": [{\"itemName\": \"Food\", \"amount\": 60}, {\"itemName\": \"Transport\", \"amount\": 40}], \"additionaldetails\": \"Grocery + bus\"}"
        },
        "url": "{{baseUrl}}/expense/add-expense"
      }
    },
    {
      "name": "Get Expenses (all)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/expense/get-expenses"
      }
    },
    {
      "name": "Get Expenses (month/year)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/expense/get-expenses?month=11&year=2024"
      }
    },
    {
      "name": "Get Expense by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/expense/get-expense/64f0c9e6aa...id..."
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
